#See https://aka.ms/containerfastmode to understand how Visual Studio uses this Dockerfile to build your images for faster debugging.

FROM mcr.microsoft.com/dotnet/core/aspnet:3.1-buster-slim AS base
WORKDIR /app
EXPOSE 80
EXPOSE 443

FROM mcr.microsoft.com/dotnet/core/sdk:3.1-buster AS build
WORKDIR /src
COPY ["Spice/Spice.csproj", "Spice/"]
RUN dotnet restore "Spice/Spice.csproj"
COPY . .
WORKDIR "/src/Spice"
RUN dotnet build "Spice.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "Spice.csproj" -c Release -o /app/publish
RUN dotnet dev-certs https --clean
# RUN dotnet dev-certs https --trust

FROM base AS final
#important for heroku!!!! but not uncomment out
ENV ASPNETCORE_URLS="http://*:12345"
ENV ASPNETCORE_ENVIRONMENT="Development"
# Add secret env variables
ENV STRIPE_SECRETKEY=""
ENV STRIPE_PUBLISHABLEKEY=""
ENV FACEBOOK_APPID=""
ENV FACEBOOK_APPSECRET=""
ENV SENDGRIP_APIKEY=""
ENV SENDGRIP_EMAILCOMPANY=""
ENV ADMINACCOUNTINFO_USERNAME=""
ENV ADMINACCOUNTINFO_EMAIL=""
ENV ADMINACCOUNTINFO_EMAILCONFIRMED=""
ENV ADMINACCOUNTINFO_NAME=""
ENV ADMINACCOUNTINFO_PHONE=""
ENV ADMINACCOUNTINFO_PASSWORD=""
ENV DATABASE_URL=""
WORKDIR /app
COPY --from=publish /app/publish .
#for local development
ENTRYPOINT ["dotnet", "Spice.dll"]
#important for heroku!!!!
#for production
# CMD ASPNETCORE_URLS="http://*:$PORT" dotnet Spice.dll 
