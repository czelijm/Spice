@model Spice.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Category's Details</h2>
<br />


<form>
    <div class="background-white border">
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label" />
            </div>
            <div class="col-5">
                <input asp-for="Name" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_DetailsAndBackToTheListButtonPartial" model="Model.Id"/>
            </div>
        </div>
    </div>
</form>

