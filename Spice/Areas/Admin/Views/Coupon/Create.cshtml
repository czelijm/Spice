@model Coupon
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Create coupon</h2>
<br />


<form method="post" enctype="multipart/form-data"> @* Becouse we post picture to so enctype must be as it is *@
    <div class="background-white border">
        <div asp-validation-summary="ModelOnly" class="text-danger" />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" />
            </div>
            <span asp-validation-for="Name" class="text-danger" />
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Picture" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="file" id="projectImage" name="files" multiple class="form-control" />
            </div>
            @** No need for validation *@
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="CouponType" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <select asp-for="CouponType" asp-items="Html.GetEnumSelectList<Coupon.ECouponType>()" class="form-control"></select>
            </div>
            @** No need for validation *@
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Dsicount" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Dsicount" class="form-control" />
            </div>
            <span asp-validation-for="Dsicount" class="text-danger" />
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="MinimumAmmount" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="MinimumAmmount" class="form-control" />
            </div>
            <span asp-validation-for="MinimumAmmount" class="text-danger" />
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="IsActive" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="checkbox" asp-for="IsActive" class="form-control" />
            </div>
            @** No need for validation *@
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_CreateAndBackToTheListButtonPartial" />
            </div>
        </div>
    </div>
</form>


@section Scripts {

    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

}
