@model IEnumerable<Coupon>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<br />

<div class="border background-white">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Coupon List</h2>
        </div>
        <div class="col-6 text-right">
            @*   <a asp-action="Create" asp-controller="Category" asp-area="Admin" class="btn btn-info"><i class="fas fa-plus"></i> &nbsp; Create new category</a>*@
            <partial name="_CreateButtonPartial" />
        </div>
    </div>
    <div class="">
        @if (Model.Count() > 0)
        {
            <table class="table table-striped border">
                <tr class="table-secondary">
                    <th>@Html.DisplayNameFor(m => m.Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Dsicount)</th>
                    <th>@Html.DisplayNameFor(m => m.MinimumAmmount)</th>
                    <th>@Html.DisplayNameFor(m => m.IsActive)</th>
                    <th></th>
                    <th></th>

                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td> @Html.DisplayFor(m => item.Name)</td>
                        <td>@Html.DisplayFor(m => item.Dsicount)</td>
                        <td>@Html.DisplayFor(m => item.MinimumAmmount)</td>
                        <td>@Html.DisplayFor(m => item.IsActive)</td>

                        <td> <partial name="_TableButtonPartial" model="item.Id" /> </td>
                    </tr>
                }
            </table>
        }
        else
        {
            <br />
            <p>There isn't existing coupons yet :(</p>
        }

    </div>

</div>

